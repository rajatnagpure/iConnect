<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >



    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundcolor"
            android:orientation="vertical"
            tools:context=".Order_list">


            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Product Name"
                    android:id="@+id/text_list_prdname"
                    android:textColor="#000000"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="QTY :"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@+id/text_list_qty"
                    android:layout_alignBaseline="@+id/text_list_qty"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="10"
                    android:textColor="#000000"
                    android:id="@+id/text_list_qty"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Status : "
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/dist_text"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Pending"
                    android:layout_marginTop="2dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:id="@+id/text_list_status"
                    android:layout_toRightOf="@+id/dist_text"
                    android:layout_alignBaseline="@+id/dist_text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Rate : Rs."
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@+id/text_list_rate"
                    android:layout_alignBaseline="@+id/text_list_rate"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="10.00"
                    android:textColor="#000000"
                    android:id="@+id/text_list_rate"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content" android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/img_edit"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_edit_black_24dp"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/img_delete"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_delete_black_24dp"
                    android:layout_marginLeft="80dp"/>



                <TextView
                    android:text="Sub Total :Rs."
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@+id/text_list_subtot"
                    android:layout_alignBaseline="@+id/text_list_subtot"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="100.00"
                    android:textColor="#000000"
                    android:id="@+id/text_list_subtot"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content" android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"/>
            </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        </LinearLayout>
    </ScrollView>






</android.support.v7.widget.CardView>